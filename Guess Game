<script>


    var guess;
    var answer = 8;

    // Asks user to guess the laptop's weight and repeats until the user guesses correctly
    while (guess != answer) {

        guess = prompt("Guess how many pounds my laptop weighs.");

        if (guess > answer) {
            alert("You guessed too high! Try again.");
        }
        else if (guess < answer) {
            alert("You have one of those fancy tiny machines? You guessed too low! Try again."); 
        }
        else {
            alert("It's actually 8.4 pounds but you are CORRECT!");
        }
    };


</script>
